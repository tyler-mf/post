<%= form_for @post do |f| %>
  <p>
    <%= f.label :author, "Your name" %><br>
    <%= f.text_area :author %>
  </p>
  <p>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>